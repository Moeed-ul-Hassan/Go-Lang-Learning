{
    "workbench.colorTheme": "Vesper",
    // Vesper ke sath "JetBrains Mono" ya "Geist Mono" font best lagta hai
    "editor.fontFamily": "JetBrains Mono",
    "editor.letterSpacing": 0.5,
    "editor.lineHeight": 25,
    // Borders ko minimize karne ke liye
    "workbench.colorCustomizations": {
        "[Vesper]": {
            "sideBar.border": "#101010",
            "editorGroupHeader.tabsBorder": "#101010",
            "statusBar.border": "#101010",
            "editorLineNumber.foreground": "#444444",
            "editorLineNumber.activeForeground": "#ff8000" // Vesper orange accent
        }
    },
    // Distraction-free coding
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",
    "editor.selectionHighlight": false,
    "editor.guides.indentation": false, // Indent lines ko hide karna minimalist feel deta hai
    "workbench.tips.enabled": false,
    "workbench.editor.showIcons": true,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "'JetBrains Mono NF', 'Cascadia Code PL'",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.lineHeight": 1.4,
    // Terminal ko clean rakhne ke liye borders aur headers hide karein
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.borderWidth": 0,
    "errorLens.statusBarMessageEnabled": true,
    "errorLens.fontStyleItalic": true,
    "errorLens.fontSize": "12px",
    "errorLens.excludeByMessage": [
        "nits"
    ], // Fazool ke chote warnings hide kar dega    
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true, // File save karte hi khud set ho jaye
    "prettier.singleQuote": true, // Minimalist vibe: Double quotes ki jagah single
    "prettier.semi": false, // Akhir mein semicolon hata kar code clean rakhta hai
    "prettier.trailingComma": "none",
    "prettier.printWidth": 80 // Code ko bohot lamba hone se rokta hai
}